<!-- 产品管理-工单班次 -->
<mapper namespace="com.mes.control.mapper.PdSchedulingWorkOrderMapper">
	<resultMap type="com.mes.entity.control.PdSchedulingWorkOrder" id="pdSchedulingWorkOrderResultMap">
		<result column="id" property="id" jdbcType="VARCHAR"/>
		<result column="work_order_id" property="workOrderId" jdbcType="VARCHAR"/>
		<result column="scheduling_id" property="schedulingId" jdbcType="VARCHAR"/>
		<result column="create_date" property="createDate" jdbcType="TIMESTAMP"/>
	</resultMap>

	<select id="findById" resultMap="pdSchedulingWorkOrderResultMap">
		<include refid="sql_select"/>
		where s.id = #{id}
	</select>

	<!--新增操作 -->
	<insert id="save" parameterType="com.mes.entity.control.PdSchedulingWorkOrder">
		insert into mes_pd_scheduling_work_order (id,work_order_id,scheduling_id,create_date)
		values (#{id},#{workOrderId},#{schedulingId},#{createDate})
	</insert>

	<!--更新操作-->
	<update id="update" parameterType="com.mes.entity.control.PdSchedulingWorkOrder">
		update mes_pd_scheduling_work_order s <include refid="sql_update"/> where s.id = #{id}
	</update>

