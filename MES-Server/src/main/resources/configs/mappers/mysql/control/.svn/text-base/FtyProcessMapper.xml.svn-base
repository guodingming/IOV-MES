			</if>
		</where>
	</sql>

	<!--更新操作-->
	<sql id="sql_update">
		<set>
			<if test="name != null  and name != '' ">
				<![CDATA[
					name = #{name},
				]]>
			</if>
			<if test="code != null  and code != '' ">
				<![CDATA[
					code = #{code},
				]]>
			</if>
			<if test="description != null  and description != '' ">
				<![CDATA[
