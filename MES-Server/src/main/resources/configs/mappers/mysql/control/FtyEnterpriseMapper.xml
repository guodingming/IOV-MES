	<!--根据id删除-->
	<delete id="deleteById" parameterType="java.lang.String">
		delete from mes_fty_enterprise where id =#{id}
	</delete>

	<!--获取数据条数-->
	<select id="getCount" parameterType="java.util.Map" resultType="int">
		select count(1) from mes_fty_enterprise t <include refid="sql_where_and_equal"/>
	</select>

	<select id="countUsage" parameterType="java.lang.String" resultType="int">
		select count(1) from mes_fty_site_info fs where fs.enterprise_id = #{enterpriseId}
