	<select id="findById" resultMap="ftyEnterpriseResultMap">
		<include refid="sql_select"/>
		where s.id = #{id}
	</select>

	<!--新增操作 -->
	<insert id="save" parameterType="com.mes.entity.control.FtyEnterprise">
		insert into mes_fty_enterprise (id,company,description,create_date,update_date)
		values (#{id},#{company},#{description},#{createDate},#{updateDate})
	</insert>

	<!--更新操作-->
