<mapper namespace="com.mes.control.mapper.FtyEnterpriseMapper">
	<resultMap type="com.mes.entity.control.FtyEnterprise" id="ftyEnterpriseResultMap">
		<result column="id" property="id" jdbcType="VARCHAR"/>
		<result column="company" property="company" jdbcType="VARCHAR"/>
